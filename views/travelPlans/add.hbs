<h1>{{title}}</h1>
<form method="POST">
  <fieldset>
    <label for="budget" class="col-2">Budget:</label>
    <input name="budget" id="budget" required type="number" min="0" />
  </fieldset>
  <fieldset>
    <label for="date" class="col-2">Travel Date:</label>
    <input name="date" id="date" required type="date" />
  </fieldset>
  <fieldset>
    <label for="country" class="col-2">Country:</label>
    <select name="country" id="country">
      {{#each countries}}
        <option value="{{this._id}}">{{this.countryName}}</option>
      {{/each}}
    </select>
  </fieldset>
  <fieldset>
    <label for="status" class="col-2">Status:</label>
    <select name="status" id="status">
      <option value="haven't been there">Haven't been there</option>
      <option value="completed">Completed</option>
      <option value="canceled">Canceled</option>
    </select>
  </fieldset>
  <button class="btn btn-primary">Save</button>
</form>
