<h1>{{title}}</h1>
{{#if user}}
  <a href="/countries/add">Add a new Country</a>
{{/if}}

<table class="table table-striped table-hover">
  <thead>
    <th>Country Name</th>
    <th>Currency</th>
    <th></th>
  </thead>
  <tbody>
    {{#each dataset}}
      <tr>
        <td>{{this.countryName}}</td>
        <td>{{this.currency}}</td>
        
      </tr>
    {{/each}}
  </tbody>
</table>
